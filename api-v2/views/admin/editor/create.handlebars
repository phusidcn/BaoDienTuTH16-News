<div class="content">
    {{#ifvalue user.role equals="ADMIN"}}
    <nav class="navbar navbar-expand-lg">
        <h4>Chào Quản trị viên</h4>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarToggleExternalContent" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/writer"><b>
                            {{#if user }}
                            {{ user.name }}
                            {{else}}
                            Trang Quản trị
                            {{/if}}
                        </b></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/employee/admins/logout"><b>Đăng
                            xuất</b></a>
                </li>
            </ul>
        </div>
    </nav>
    {{/ifvalue}}
    <h4>Create Editor</h4>
    {{#each errors}}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {{/each}}
    <form action="/employee/admins/dashboard/editor/create" method="POST" class="mt-3" enctype="multipart/form-data">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <button type="button" class="btn btn-secondary">
                    <i class="fa fa-flag-o"></i>
                </button>
            </div>
            <input required type="text" class="form-control" placeholder="Tên biên tập viên" id="name" name="name"
                aria-describedby="basic-addon1">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <button type="button" class="btn btn-secondary">
                    <i class="fa fa-flag-o"></i>
                </button>
            </div>
            <input required type="text" class="form-control" placeholder="Email biên tập viên" id="email" name="email"
                aria-describedby="basic-addon1">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <button type="button" class="btn btn-secondary">
                    <i class="fa fa-folder-o"></i>
                </button>
            </div>
            <select name="category" id="category" class="form-control">    
                {{#each categories}}
                    <option value="{{id}}">{{ name }}</option>
                {{/each}}
            </select>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <button type="button" class="btn btn-secondary">
                    <i class="fa fa-flag-o"></i>
                </button>
            </div>
            <input required type="text" class="form-control" placeholder="Password biên tập viên" id="password" name="password"
                aria-describedby="basic-addon1">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <button type="button" class="btn btn-secondary">
                    <i class="fa fa-tags"></i>
                </button>
            </div>
            <input required type="file" class="form-control" placeholder="Avatar" id="image" name="image"
                aria-describedby="basic-addon1">
        </div>
        
        <div class="mt-3">
            <button type="submit" class="btn-blue" value="">Tạo</button>
        </div>
    </form>
</div>