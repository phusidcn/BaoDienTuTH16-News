
<div class="container-fluid" style="margin: auto; text-align:center">

<h4 class="mt-3" style="color: orange">Thông tin cá nhân</h4>
<form action="/subscribers/dashboard/profile/{{user._id}}?_method=PUT" method="POST" style="width: 50%;display:inline-block; margin:2rem;" >
    
    <div class="row">
        <div class="col-md-12">
            <label class="bmd-label-floating">Email</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <button type="button" class="btn btn-prepend">
                        <i class="fa fa-envelope-o"></i>
                    </button>
                </div>
                <input name="email" type="email" class="form-control" placeholder="Email" aria-label="Email"
                    aria-describedby="basic-addon1" value="{{user.email}}">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <label class="bmd-label-floating">User name</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <button type="button" class="btn btn-prepend">
                        <i class="fa fa-user-o"></i>
                    </button>
                </div>
                <input name="name" type="text" class="form-control" value="{{user.name}}" placeholder="Username"
                    aria-label="Username" aria-describedby="basic-addon1" required>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label for="startDay">Start Day:</label>
            <p>{{ generateTime user.startDay "MMMM Do YYYY" }}</p>
        </div>
        <div class="col-md-6">
            <label for="startDay">End Day:</label>
            <p>{{ generateTime user.endDay "MMMM Do YYYY" }}</p>
        </div>
    </div>

    <div style="display:flex; justify-content:center;" class="mt-4">
        <button type="submit" style="text-align:center" class="btn btn-success mr-3">
            Update Profile
        </button>
        <button type="button" style="text-align:center" class="btn btn-success"
            onclick="window.location.href='/subscribers/dashboard/changePass/{{user._id}}'">Đổi password</button>
    </div>


</form>
</div>