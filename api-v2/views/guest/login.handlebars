<!-- ##### Login Area Start ##### -->
<div class="mag-login-area py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-6">
                <div class="login-content bg-white p-30 box-shadow">
                    <!-- Section Title -->
                    <div class="section-heading">
                        <h5>Great to have you back!</h5>
                    </div>

                    <form action="/guests/login" method="POST">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" class="form-control"
                                placeholder="Enter Email" />
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" class="form-control"
                                placeholder="Enter Password" />
                        </div>
                        {{!-- <div class="form-group">
                            <div class="g-recaptcha" data-sitekey="6LeHXKkUAAAAAFvmjPUomE2mjTHKueZAfoQvRSND"></div>
                            <br />
                            <input type="submit" value="Submit">
                        </div> --}}
                        <button type="submit" class="btn mag-btn mt-30">Login</button>
                    </form>
                    <div style="text-align: center; color:#fff;">
                        <p class="lead mt-4">
                            No Account? <a href="/guests/register">Register</a>
                        </p>
                        <a href="/auth/google" class="btn btn-block btn-social btn-google">
                            <i class="fa fa-google"></i> Sign in with Google
                        </a>
                        <a id="google-button" class="btn btn-block btn-social btn-facebook">
                            <i class="fa fa-facebook"></i> Sign in with Facebook
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Login Area End ##### -->