{{#ifvalue user.role equals="WRITER"}}
<nav id="sidebar">
    <ul class="list-unstyled components">
        <div class="profile text-center">Phóng viên báo MUTV</div>
        <div class="avt-wrapper">
            <div class="avt">
                <img src="/uploads/{{user.avatar}}">
            </div>
            <div class="profile d-block mx-auto text-center bottom-border">{{user.name}}</div>
        </div>
        <li class="nav-item active">
            <a href="/employee/writers/dashboard/create">
                <i class="fa fa-upload"></i>
                <span> Đăng bài viết</span>
            </a>
        </li>
        <li>
            <a href="#viewList" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                <i class="fa fa-eye"></i>
                <span> Xem bài viết</span>
            </a>
            <ul class="collapse list-unstyled" id="viewList">
                <li>
                    <a href="/employee/writers/dashboard/approved">
                        <i class="fa fa-bandcamp mr-2" aria-hidden="true"></i>
                        Đã được duyệt
                    </a>
                </li>
                <li>
                    
                    <a href="/employee/writers/dashboard/published">
                        <i class="fa fa-check mr-2" aria-hidden="true"></i>
                    Đã xuất bản</a>
                </li>
                <li>
                    <a href="/employee/writers/dashboard/rejected">
                    <i class="fa fa-window-close mr-2" aria-hidden="true"></i>Bị từ chối</a>
                </li>
                <li>
                    <a href="/employee/writers/dashboard/waiting">
                    <i class="fa fa-anchor mr-2" aria-hidden="true"></i>Chưa được duyệt</a>
                </li>
            </ul>
        </li>
    </ul>

    <ul class="list-unstyled CTAs">
        <li>
            <a href="#" class="editProfile">
                <i class="fa fa-pencil mr-2" aria-hidden="true"></i>Chỉnh sửa profile</a>
        </li>
    </ul>
</nav>

{{/ifvalue}}


