<div class="content">
<form action="/writer/post/create" method="POST">
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <button type="button" class="btn btn-secondary">
                <i class="fa fa-flag-o"></i>
            </button>
        </div>
        <input type="text" class="form-control" placeholder="Tiêu đề" id="title" name="title"
            aria-describedby="basic-addon1">
    </div>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <button type="button" class="btn btn-secondary">
                <i class="fa fa-folder-o"></i>
            </button>
        </div>
        <input type="text" class="form-control" placeholder="Chuyên mục" id="category" name="category"
            aria-describedby="basic-addon1">
    </div>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <button type="button" class="btn btn-secondary">
                <i class="fa fa-tags"></i>
            </button>
        </div>
        <input type="text" class="form-control" placeholder="Gán nhãn" id="tag" name="tag"
            aria-describedby="basic-addon1">
    </div>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <button type="button" class="btn btn-secondary">
                <i class="fa fa-book"></i>
            </button>
        </div>
        <input type="text" class="form-control" placeholder="Tóm tắt nội dung" id="content" name="content"
            aria-describedby="basic-addon1">
    </div>
    <textarea class="mb-3" name="editor" cols="150" rows="10">Noi dung chi tiet</textarea>
    <div class="mt-3">
        <button type="submit" class="btn-blue" value="">Đăng bài</button>
    </div>
</form>
</div>