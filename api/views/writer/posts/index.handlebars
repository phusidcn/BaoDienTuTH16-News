<div class="content">
    <nav class="navbar navbar-expand-lg">
        <h4>Minimum</h4>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarToggleExternalContent" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/writer"><b>Trang chủ</b></a>
                </li>
                <li class="nav-item">
                    <a data-toggle="modal" data-target="#logOut" class="nav-link" href="#"><b>Đăng
                            xuất</b></a>
                </li>
            </ul>
        </div>
    </nav>
    <h4>ALL POSTS</h4>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Title</th>
                <th>Category</th>
                <th>Status</th>
                <th>Date</th>
            </tr>
        </thead>

        <tbody>
            {{#each posts}}
            <tr>
                <td>{{_id}}</td>
                <td><img height="75" width="75" class="img-responsive" src="/uploads/{{image}}" alt=""></td>
                <td>{{title}}</td>
                <td>{{category.name}}</td>
                <td>{{status}}</td>
                <td>{{ generateTime createdAt "MMMM Do YYYY" }}</td>
                <td><a href="/writer/post/edit/{{_id}}" class="btn btn-success">Edit</a></td>
                <td>
                    <form action="/writer/post/{{_id}}?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>