
<div class="modal fade" id="add-user" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add User</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="row ml-3">
                    <form action="/admin/writer/create" method="POST">
                        <div class="form-group">
                            <label class="bmd-label-floating" for="id">ID</label>
                            <input type="text" class="form-control" name="id" id="id">
                        </div>
                        <div class="form-group">
                            <label class="bmd-label-floating" for="username">Username</label>
                            <input type="text" class="form-control" name="username" id="username">
                        </div>
                        <div class="form-group">
                            <label class="bmd-label-floating" for="email">Email address</label>
                            <input type="email" class="form-control" name="email" id="email">
                        </div>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row mb-5" style="display:flex; justify-content:center;">
            <a class="btn btn-success" href="/admin/writer/create" data-toggle="modal" data-target="#add-user">
                <i class="material-icons">add</i>
                Thêm Phóng viên
            </a>
            <button class="btn btn-danger">
                <i class="material-icons">delete</i>
                Xóa Phóng viên
            </button>
        </div>
        <div class="row mb-3">
            {{#each writers}}
            <div class="col-md-4">
                <div class="card card-profile card-common">
                    <div class="card-avatar">
                        <a href="#pablo">
                            <img class="img" src="/img/user.jpg" />
                        </a>
                    </div>
                    <div class="card-body">
                        <h6 class="card-category text-gray">Phóng viên MUTV</h6>
                        <h4 class="card-title">{{ name }}</h4>
                        <p class="card-description">
                            {{email}}
                        </p>
                        <a href="/admin/writer/edit/{{id}}" class="btn btn-warning btn-round">Xem
                            thông tin</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

    </div>
</div>