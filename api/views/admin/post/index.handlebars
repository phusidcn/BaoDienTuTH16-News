<div class="content">
    <div class="col-lg-12 col-md-12">
        <div class="card card-common">
            <div class="card-header card-header-tabs card-header-info">
                <div class="nav-tabs-navigation">
                    <div class="nav-tabs-wrapper">
                        <span class="nav-tabs-title">Quản lý:</span>
                        <ul class="nav nav-tabs" data-tabs="tabs">
                            <li class="nav-item">
                                <a class="nav-link" href="#messages" data-toggle="tab">
                                    <i class="material-icons">assignment</i> Posts
                                    <div class="ripple-container"></div>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Status</th>
                            <th>Title</th>
                            <th>Created At</th>
                            <th colspan="2"></th>
                        </tr>
                    </thead>

                    <tbody>
                        {{#each posts}}
                        <tr>
                            <td>{{status}}</td>
                            <td>{{title}}</td>
                            <td>{{ generateTime createdAt "MMMM Do YYYY" }}</td>
                            <td style="text-align: center;"><a href="/admin/post/edit/{{id}}" class="btn btn-warning">Edit</a></td>
                            <td style="text-align: center;">
                                <form action="/admin/post/{{id}}?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>